{
  "automock": false,
  "moduleFileExtensions": [
    "js"
  ],
  "testRegex": "lib/es6_global/test/(unit|integration)/.+_test\\.js$",
  "transformIgnorePatterns": [
    "<rootDir>/node_modules/(?!(.*bs-)|wonder-commonlib)"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/test/helper/jest/specHelper.js",
  "notify": false,
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage/",
  "coveragePathIgnorePatterns": [
    "<rootDir>/lib/js/src/.+/Director.*",
    "<rootDir>/lib/js/src/utils/",
    "<rootDir>/lib/js/src/definition/",
    "<rootDir>/lib/js/src/structure/",
    "<rootDir>/lib/js/src/Index.*"
  ],
  "collectCoverageFrom": [
    "lib/js/src/**/*.{js}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 95,
      "statements": 95,
      "branches": 80,
      "functions": 94
    }
  }
}