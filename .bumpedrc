files:
  - package.json
plugins:
  prerelease:
    Linting config files:
      plugin: bumped-finepack
    Unit Test:
      plugin: bumped-terminal
      command: 'npm run test:coverage'
    E2e Test:
      plugin: bumped-terminal
      command: 'npm run test:render'
    Update Base CommitId:
      plugin: bumped-terminal
      command: 'gulp upgradeBaseCommitId && git add test/e2e/config/e2eConfig.json && git commit -m "test(e2e-test): update base commit id"'
  postrelease:
    Generating CHANGELOG file:
      plugin: bumped-terminal
      command: 'npm run version'
    Committing new version:
      plugin: bumped-terminal
      command: 'git add CHANGELOG.md package.json && git commit -m "chore(release): $newVersion"'
    Publishing tag to GitHub:
      plugin: bumped-terminal
      command: 'git tag $newVersion && git push origin master:master && git push origin --tags'
    Publishing to NPM:
      plugin: bumped-terminal
      command: npm publish