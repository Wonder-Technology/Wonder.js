{
  "preset": "ts-jest",
  "automock": false,
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\js$": "babel-jest"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx",
    "node"
  ],
  "testMatch": [
    "<rootDir>/test/step-definitions/**/*.steps.ts"
  ],
  "testPathIgnorePatterns": [
    "/mine"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/test/helper/jest/specHelper.js"
  ],
  "notify": false,
  "verbose": true
}